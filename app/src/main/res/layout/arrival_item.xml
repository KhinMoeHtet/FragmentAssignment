<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="180dp"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgArrival"
        android:layout_width="110dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txtNameStyle"
        app:layout_constraintTop_toBottomOf="@id/imgArrival"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/txtBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txtBrandStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".74"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:background="#786E6E"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias=".8"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <RatingBar
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewOne"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/viewTwo"
        android:layout_width="2dp"
        android:layout_height="48dp"
        android:background="#786E6E"
        app:layout_constraintLeft_toRightOf="@id/rating_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txtPriceStyle"
        app:layout_constraintLeft_toRightOf="@id/viewTwo"
        app:layout_constraintTop_toBottomOf="@id/viewOne"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ks"
        style="@style/txtPriceStyle"
        app:layout_constraintLeft_toRightOf="@id/txtPrice"
        app:layout_constraintTop_toBottomOf="@id/viewOne"
        app:layout_constraintBaseline_toBaselineOf="@id/txtPrice"


        />




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>